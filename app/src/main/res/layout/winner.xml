<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="WINNER!!!"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tv_winner_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_winner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/iv_winner"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_winner_country"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/egy" />

    <LinearLayout
        android:id="@+id/textview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_winner"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rate_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/rate_press"
            android:text="Rate app"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/share_press"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Share your predictions!"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textview_container"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_rate"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/rate_press" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/share_press" />
    </LinearLayout>
</RelativeLayout>
